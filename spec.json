{
    "name": "mist",
    "host": "mist.elos.com",
    "port": 80,

    "middleware": [
        "log",
        "cors"
     ],

     "services": [
         "db",
         "twilio",
         "views",
         "texts"
     ],

     "endpoints": [
         {
             "name": "test",
             "path": "/test",
             "actions": [ "GET" ],
             "middleware": {
                 "GET": [ "log", "cors" ]
             }
         },
         {
             "name": "register",
             "path": "/register",
             "actions": [ "GET", "POST" ],
             "middleware": {
                 "GET": [ "log", "cors" ],
                 "POST": [ "log", "cors" ]
             },
             "services": {
                 "GET": [ "views" ],
                 "POST": [ "db" ]
             }
         },
         {
             "name": "message",
             "path": "/message",
             "actions": [ "POST", "OPTIONS" ],
             "middleware": {
                 "POST": [ "log", "cors" ],
                 "OPTIONS": [ "log", "cors" ]
             },
             "services": {
                 "POST": [ "db", "twilio", "texts" ],
                 "OPTIONS": []
             }
         }
     ]
}
